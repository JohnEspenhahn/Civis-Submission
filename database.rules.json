{
  "rules": {
    ".read": "true",
    ".write": "true",
    
    "urls": {
      "$url": {
        ".validate": "newData.hasChildren(['text', 'author'])",
        
        "text": {
          ".validate": "newData.isString() && newData.val().length > 0"
        },
        "author": {
          ".validate": "newData.isString() && newData.val().length > 0"
        }
      }
    },
    
    "url_comments": {   
      "$url_key": {
        "$comment_key": {
          ".validate": "newData.hasChildren(['comment', 'author']) && root.child('urls/' + $url_key).exists()",
        
          "author": {
            ".validate": "newData.isString() && newData.val().length > 0"
          },
          "comment": {        
            ".validate": "newData.isString() && newData.val().length > 0"
          }
        }
      }
    },
    
    "url_likes": {
      "$url_key": {
        "$uid": {
          ".validate": "newData.isBoolean() && root.child('urls/' + $url_key).exists() && root.child('users/' + $uid).exists()"
        }
      }
    }
  }
}
